		fade_based_on_lifetime="1"
		fire_cells_dont_ignite_damagemodel="0"
		gravity.x="0"
		gravity.y="20"
		is_emitting="1"
		is_trail="1"
		lifetime_min="0.1"
		lifetime_max="0.5"
		particle_single_width="1"
		render_back="0"
		area_circle_radius.min="0"
		area_circle_radius.max="2"
		velocity_always_away_from_center="-120"
		friction="2"
	></ParticleEmitterComponent>

