		gravity.y="0"
		is_emitting="1"
		is_trail="1"
		lifetime_min="0.5"
		lifetime_max="1"
		particle_single_width="1"
		render_back="0"
		x_pos_offset_min="-0.3"
		x_pos_offset_max="0.3"
		y_pos_offset_min="-0.3"
		y_pos_offset_max="0.3"
		velocity_always_away_from_center="10"
		friction="2"
