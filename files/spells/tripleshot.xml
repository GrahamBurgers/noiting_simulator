			gravity_y="0"
			air_friction="3"
		></VelocityComponent>

		<ProjectileComponent
			speed_min="300"
			speed_max="300"
			muzzle_flash_file="mods/noiting_simulator/files/spells/muzzle_flashes/flash_blue_medium.xml"
			velocity_sets_y_flip="1"
			knockback_force="4"
			><damage_by_type
				fire="0.12"
				healing="2.4"
				curse="0.16"
			></damage_by_type>
			<config_explosion
				explosion_sprite="mods/noiting_simulator/files/spells/explosions/008_blue.xml"
