<Entity name="$projectile_default">

	<Base file="mods/noiting_simulator/files/spells/_base.xml" >
		<VelocityComponent
			gravity_y="250"
			air_friction="1"
		></VelocityComponent>

		<ProjectileComponent 
			speed_min="240"
			speed_max="240"
			lifetime_randomness="6"
			muzzle_flash_file="mods/noiting_simulator/files/spells/muzzle_flashes/flash_yellow_medium.xml"
			penetrate_world="0"
            blood_count_multiplier="4"
			damage="2"
			><damage_by_type
				slice="0.16"
				healing="1.6"
			></damage_by_type>
			<config_explosion
				explosion_sprite="data/particles/explosion_008.xml"
			></config_explosion>
		</ProjectileComponent>

		<SpriteComponent
			image_file="mods/noiting_simulator/files/spells/gfx/flamethrower.xml" 
		></SpriteComponent>

		<AudioComponent
			file="data/audio/Desktop/projectiles.bank"
			event_root="projectiles/flamethrower">
		</AudioComponent>
	</Base>

	<VariableStorageComponent
		_tags="spread_nonrandom_degrees"
		value_int="-24"
	></VariableStorageComponent>

	<LuaComponent
		execute_on_added="1"
		script_source_file="mods/noiting_simulator/files/spells/flamethrower.lua"
	></LuaComponent>

    <LuaComponent
		_tags="piercing"
		script_source_file="mods/noiting_simulator/files/spells/piercing.lua"
		execute_every_n_frame="1"
	></LuaComponent>

	<ParticleEmitterComponent
		_enabled="0"
		_tags="proj_enable"
		render_on_grid="1"
		cosmetic_force_create="1"
		count_min="2"
		count_max="2"
		custom_alpha="0.35"
		draw_as_long="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		emit_only_if_there_is_space="0"
		emit_real_particles="0"
		emitted_material_name="spark_yellow"
		fade_based_on_lifetime="1"
		fire_cells_dont_ignite_damagemodel="0"
		gravity.x="0"
		gravity.y="-90"
		is_emitting="1"
		is_trail="0"
		lifetime_min="2"
		lifetime_max="4"
		particle_single_width="1"
		render_back="0"
		area_circle_radius.min="1"
		area_circle_radius.max="1"
		area_circle_sector_degrees="360"
		velocity_always_away_from_center="-70"
		friction="10"
	></ParticleEmitterComponent>

</Entity>