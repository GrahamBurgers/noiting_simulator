<Entity name="$projectile_default">

	<Base file="mods/noiting_simulator/files/spells/_base.xml" >
		<VelocityComponent
			gravity_y="120"
			air_friction="0.5"
		></VelocityComponent>

		<ProjectileComponent 
			speed_min="145"
			speed_max="145"
			muzzle_flash_file="mods/noiting_simulator/files/spells/muzzle_flashes/flash_green_medium.xml"
			play_damage_sounds="1"
			velocity_sets_scale="0"
			on_lifetime_out_explode="1"
			on_death_explode="1"
			><damage_by_type
				slice="0"
				healing="2"
				curse="0.6"
			></damage_by_type>
			<config_explosion
				explosion_radius="30"
				explosion_sprite="mods/noiting_simulator/files/spells/explosions/040_green.xml"
				physics_throw_enabled="1"
			></config_explosion>
		</ProjectileComponent>

		<SpriteComponent
			update_transform_rotation="0"
			image_file="mods/noiting_simulator/files/spells/gfx/bang.xml" 
		></SpriteComponent>
	</Base>

    <LuaComponent
		script_source_file="mods/noiting_simulator/files/spells/bang.lua"
		execute_every_n_frame="-1"
		execute_on_removed="1"
	></LuaComponent>

	<ParticleEmitterComponent
		render_on_grid="1"
		cosmetic_force_create="1"
		count_min="1"
		count_max="1"
		custom_alpha="0.5"
		draw_as_long="0"
		emission_interval_min_frames="1"
		emission_interval_max_frames="1"
		emit_cosmetic_particles="1"
		emit_only_if_there_is_space="0"
		emit_real_particles="0"
		emitted_material_name="spark_green"
		fade_based_on_lifetime="0"
		fire_cells_dont_ignite_damagemodel="0"
		gravity.x="0"
		gravity.y="0"
		is_emitting="1"
		is_trail="0"
		lifetime_min="0.3"
		lifetime_max="0.3"
		particle_single_width="1"
		render_back="0"
		area_circle_radius.min="2"
		area_circle_radius.max="2"
		velocity_always_away_from_center="-150"
		friction="2"
	></ParticleEmitterComponent>

</Entity>